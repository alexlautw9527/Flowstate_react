// .eslintrc.json
{
  "root": true,
  "settings": {
    "import/parsers": {
      "@typescript-eslint/parser": [".ts", ".tsx"]
    }
  },
  "env": {
    "browser": true,
    "node": true,
    "es2021": true
  },

  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    },
    "project": ["./tsconfig.json"]
  },

  "extends": [
    "airbnb",
    "airbnb-typescript",
    "plugin:react/jsx-runtime",
    "prettier"
  ],
  "plugins": ["prettier"],
  "rules": {
    "prettier/prettier": ["warn", {}, { "usePrettierrc": true }]
  },
  "include": [
    "src/**/*.js",
    "tests/**/*.js"
  ]
  
}
